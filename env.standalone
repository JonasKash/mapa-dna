# Mapa da Grana - Configurações Standalone
# Domínio: lp.mapadnafinanceiro.com (portas padrão 80/443)

# OpenAI API Key (obrigatório para funcionalidade completa)
OPENAI_API_KEY=sk-proj-sua-chave-aqui

# Ambiente
NODE_ENV=production
PORT=3002

# URLs para domínio standalone
FRONTEND_URL=https://lp.mapadnafinanceiro.com
VITE_BACKEND_URL=https://lp.mapadnafinanceiro.com

# Webhook (opcional)
WEBHOOK_URL=https://n8n.mapadnafinanceiro.com/webhook/mapa-dna-financeiro
WEBHOOK_SECRET=sua-chave-secreta-aqui

# Configurações de segurança
CORS_ORIGIN=https://lp.mapadnafinanceiro.com

# Configurações de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Configurações de log
LOG_LEVEL=info
LOG_FILE=/var/log/mapadna/app.log
